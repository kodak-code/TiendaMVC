    @{
        ViewBag.Title = "Home Page";
    }

    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <h6>Cantidad Clientes</h6>
                            <h6 id="totalClientes">0</h6>
                        </div>
                        <div class="col-sm-3">
                            <i class="fas fa-user fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <h6>Cantidad Ventas</h6>
                            <h6 id="totalVentas">0</h6>
                        </div>
                        <div class="col-sm-3">
                            <i class="fas fa-shopping-bag fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-secondary text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <h6>Cantidad Productos</h6>
                            <h6 id="totalProductos">0</h6>
                        </div>
                        <div class="col-sm-3">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-tags me-1"></i>
            Historial de Ventas
        </div>
        <div class="card-body">

            <form action="@Url.Action("ExportarVenta", "Home")" method="post">
                <div class="row align-items-end">
                    <div class="col-sm-2">
                        <div class="mb-2">
                            <label class="form-label">Fecha de Inicio:</label>
                            <input class="form-control" type="text" id="fechaInicio" name="fechaInicio" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="mb-2">
                            <label class="form-label">Fecha Fin:</label>
                            <input class="form-control" type="text" id="fechaFin" name="fechaFin" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="mb-2">
                            <label class="form-label">Id Transaccion:</label>
                            <input class="form-control" type="text" id="transaccion" name="idTransaccion"  />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="mb-2 d-grid">
                            <button class="btn btn-primary" id="buscar" type="button">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="mb-2 d-grid">
                            <button class="btn btn-success" type="submit">
                                <i class="fas fa-file-excel"></i> Exportar
                            </button>
                        </div>
                    </div>
                </div>
            </form>

            <hr />

            <div class="col-sm-12">
                <table class="display cell-border" id="tablaIndex" style="width:100%">
                    <thead>
                        <tr>
                            <th>Fecha Venta</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>ID Transacción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* AJAX *@
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    @section Scripts {

        <script>
            // Url VerHistorialVenta
            var urlVerHistorialVenta =
                '@Url.Action("VerHistorialVenta", "Home")' +
                "?FechaInicio=" + $("#fechaInicio").val() +
                "&FechaFin=" + $("#fechaFin").val() +
                "&IdTransaccion=" + $("#transaccion").val();

            // Buscar venta
            $("#btnBuscar").on("click", function () {
                var nueva_url = Url.Action("VerHistorialVenta", "Home") +
                    "?FechaInicio=" + $("#fechaInicio").val() +
                    "&FechaFin=" + $("#fechaFin").val() +
                    "&IdTransaccion=" + $("#transaccion").val();
                tabladata.ajax.url(nueva_url).load();
            });

        </script>

        @* Script base que contiene todos los archivos JS de usuario *@
        <script src="~/Scripts/JS-DASHBOARD/base.js"></script>
    }